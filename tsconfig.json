{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./",             // where the .ts files live
    "outDir": "./dist",          // where to output compiled .js
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
